<Window x:Class="ElektronikusEllenőrzőProjekt.HWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElektronikusEllenőrzőProjekt"
        mc:Ignorable="d"
        Title="HWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Bejelentkezés" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="75" Width="200" FontSize="24" FontFamily="Bahnschrift" Click="Button_Click"/>
        <PasswordBox HorizontalAlignment="Right" VerticalAlignment="Center" Width="120" Margin="0,0,200,0"/>
        <TextBox x:Name="HFN" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Margin="200,0,0,0"/>
        <Label Content="Jelszó" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="20" Width="150" Height="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,30,180,0"/>
        <Label Content="Felhasználó név" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Width="150" Height="40" Margin="180,30,0,0"/>

    </Grid>
</Window>

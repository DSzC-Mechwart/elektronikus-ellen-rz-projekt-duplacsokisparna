<Window x:Class="ElektronikusEllenőrzőProjekt.admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElektronikusEllenőrzőProjekt"
        mc:Ignorable="d"
        Title="admin" Height="auto" Width="auto">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="1900"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Title" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Margin="259,10,0,0" HorizontalAlignment="Left"><Run Language="hu-hu" FontWeight="Bold" Text="Tanulók"/><LineBreak/><Run Language="hu-hu"/></TextBlock>
        <DataGrid x:Name="datas" Background="LightBlue" AutoGenerateColumns="True" Margin="0,50,0,0"/>
        <Button x:Name="delete" Content="Törlés" HorizontalAlignment="Left" Margin="0,17,0,0" VerticalAlignment="Top" Click="delete_Click"/>

    </Grid>
</Window>
